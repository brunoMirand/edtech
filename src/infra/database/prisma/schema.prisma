generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id   String @id @default(uuid())
  name String
  role Role   @default(STUDENT)

  @@map("users")
}

model Content {
  id          String   @id @default(uuid())
  name        String   @unique
  description String
  type        Type
  views       Int      @default(0)
  created_at  DateTime @default(now())
  updated_at  DateTime @default(now()) @updatedAt

  @@map("contents")
}

enum Role {
  STUDENT
  ADMIN
}

enum Type {
  video
  pdf
  image
}
