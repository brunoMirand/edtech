// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id   String @id @default(uuid())
  name String
  role Role   @default(USER)

  @@map("users")
}

model Content {
  id          String   @id @default(uuid())
  name        String   @unique
  description String
  type        Type
  created_at  DateTime @default(now())

  @@map("contents")
}

enum Role {
  USER
  ADMIN
}

enum Type {
  video
  pdf
  image
}
